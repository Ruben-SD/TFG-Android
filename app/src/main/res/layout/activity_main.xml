<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_fps"
            android:textSize="17dp"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="300dp"
            android:layout_marginBottom="663dp" />

        <TextView
            android:id="@+id/tv_ip_addr_et_title"
            android:layout_width="183dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="164dp"
            android:layout_marginEnd="113dp"
            android:text="@string/ip_addr_et_title"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_ip_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ip_addr_et_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-22dp"
            android:layout_marginStart="113dp"
            android:layout_marginEnd="113dp"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:text="@string/default_ip" />

        <TextView
            android:id="@+id/tv_connected_to_ip_addr"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_below="@+id/et_ip_address"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="113dp"
            android:textSize="14dp" />

        <Button
            android:id="@+id/but_connect"
            android:layout_width="139dp"
            android:layout_height="67dp"
            android:layout_below="@+id/et_ip_address"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="113dp"
            android:backgroundTint="#000000"
            android:text="@string/connect" />

        <Button
            android:id="@+id/but_dim_screen"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_below="@+id/but_connect"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="113dp"
            android:backgroundTint="#000000"
            android:text="@string/dim_screen" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>