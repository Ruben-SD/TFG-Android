<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/dimScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connectedToText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="154dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="145dp"
            android:text="@string/dim_screen"
            app:backgroundTint="#000000" />

        <TextView
            android:id="@+id/connectedToText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/submitIpButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="131dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="118dp"
            android:text="@string/sending_data_to" />

        <EditText
            android:id="@+id/editTextIPAddress"
            android:layout_width="wrap_content"
            android:layout_height="-50dp"
            android:layout_centerInParent="true"
            android:ems="10"
            android:hint="@string/default_ip"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextIPAddress"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="119dp"
            android:layout_marginBottom="204dp"
            android:text="@string/ask_for_ip" />

        <Button
            android:id="@+id/submitIpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="400dp"
            android:text="@string/submit_ip"
            app:backgroundTint="#000000" />

        <TextView
            android:id="@+id/textViewFPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/reconnect"
            android:layout_width="130dp"
            android:layout_height="66dp"
            android:layout_below="@+id/dimScreen"
            android:layout_alignBottom="@+id/dimScreen"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="145dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="134dp"
            android:layout_marginBottom="-83dp"
            android:text="@string/reconnect"
            app:backgroundTint="#000000" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>